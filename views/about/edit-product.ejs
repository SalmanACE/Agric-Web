<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/weather/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="image">Image</label>
                <input type="text" name="image" id="image" value="<% if (editing) { %><%= de.image %><% } %>">
            </div>
           
         
            <div class="form-control">
                <label for="climate">Climate</label>
                <textarea name="climate" id="climate" rows="5"><% if (editing) { %><%= de.climate %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="land">Land</label>
                <textarea name="land" id="land" rows="5"><% if (editing) { %><%= de.land %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="Landimage">LandImage</label>
                <input type="text" name="Landimage" id="Landimage" value="<% if (editing) { %><%= de.Landimage %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= de._id %>" name="deId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>